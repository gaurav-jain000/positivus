---
import { navLinksArr } from "@/lib/shared";
import Logo from "./logo.astro";
import { buttonVariants } from "./ui/button";
import SocialLinks from "./social-links.astro";
import ThemeButton from "./theme-button.astro";
---

<footer class="maximus uni-padding-t max-sm:bg-stone-950">
  <div
    class="bg-stone-950 rounded-t-4xl md:rounded-t-[45px] py-12 px-4 sm:p-12 flex flex-col gap-8 md:gap-12"
  >
    <div
      class="flex max-md:flex-col gap-4 md:gap-1 items-center justify-between"
    >
      <Logo className="text-stone-50 text-2xl!" />
      <nav
        class="flex max-[580px]:flex-wrap gap-0 lg:gap-3 xl:gap-5 items-center justify-center"
      >
        {
          navLinksArr.map((link) => (
            <a
              href={link.url}
              class={buttonVariants({
                variant: "link",
                className: "body-16 font-normal text-stone-50 underline",
              })}
            >
              {link.title}
            </a>
          ))
        }
      </nav>
      <SocialLinks className="md:max-lg:hidden max-md:py-2" />
    </div>
    <div class="grid md:grid-cols-2">
      <div
        class="flex flex-col items-center md:items-start max-md:text-center gap-2 text-stone-50"
      >
        <div class="bg-tertiary px-2 theme-h4 rounded-sm text-stone-950">
          Contact us:
        </div>
        <ul class="w-3/4 lg:w-1/2 space-y-2">
          <li>
            <a href="mailto:varuag1432@gmail.com" class="text-sm"
              >Email: info@positivus.com</a
            >
          </li>
          <li>
            <a href="tel:5555678901" class="text-sm">Phone: 555-567-8901</a>
          </li>
          <li>
            <a href="tel:5555678901" class="text-sm"
              >Address: 1234 Main St Moonstone City, Startdust State 12345</a
            >
          </li>
          <li class="md:max-lg:block hidden">
            <SocialLinks />
          </li>
        </ul>
      </div>
      <div class="bg-stone-800 rounded-3xl p-6 2xl:p-8 grid place-items-center">
        <form
          action=""
          class="grid max-xl:grid-rows-2 xl:grid-cols-2 gap-4 w-full"
        >
          <input
            type="text"
            class="border border-stone-50 rounded-xl placeholder:text-stone-200 px-4 caret-stone-300 text-stone-50"
            placeholder="Your email"
          />
          <ThemeButton className="bg-tertiary text-stone-950"
            >Subscribe to news</ThemeButton
          >
        </form>
      </div>
    </div>
    <div class="h-px bg-stone-50"></div>
