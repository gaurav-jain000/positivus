---
import { MenuIcon } from "lucide-react";
import ThemeButton from "@/components/theme-button.astro";
import { buttonVariants, Button } from "./ui/button";
import { BookText } from "lucide-react";
---

<header class=`sticky top-0 z-50 maximus py-4 md:py-8 bg-white`>
  <div class="flex items-center justify-between gap-2">
    <div class="flex md:hidden w-fit">
      <button>
        <MenuIcon className="size-[2.5em]" />
      </button>
    </div>
    <nav class="max-md:hidden flex items-center xl:gap-5">
      {
        [
          { title: "About us", url: "/" },
          { title: "Services", url: "/" },
          { title: "Use Cases", url: "/" },
          { title: "Pricing", url: "/" },
          { title: "Blog", url: "/" },
        ].map((link) => (
          <a
            href={link.url}
            class={buttonVariants({
              variant: "ghost",
              className: "body-18 font-normal",
            })}
          >
            {link.title}
          </a>
        ))
      }
      <Button size="icon" className="body-18 lg:hidden">
        <BookText />
      </Button>
      <ThemeButton variant="outline" className="body-18 max-lg:hidden">
        Request a quote
      </ThemeButton>
    </nav>
  </div>
</header>
